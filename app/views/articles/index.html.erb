<div>
    <h1>Articles</h1>
    <%= notice %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created by</th>
                <th colspan="3"> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td> <%= article.name %></td>
                    <td> <%= article.description %></td>
                    <td> <%= link_to article.user.name, article.user %> </td>
                    <td> <%= link_to "view", article %> </td>
                    <% if logedin? && article.user == current_user %>
                        <td> <%= link_to "delete", article, data:{turbo_method: :delete, confirmation: "are you sure?"} %> </td>
                        <td> <%= link_to "edit", url_for([:edit, article]) %> </td>
                    <% end %>

                </tr>
            <% end %>
        </tbody>
    </table>

     <%= link_to "craete_article", new_article_path %>   
</div>
