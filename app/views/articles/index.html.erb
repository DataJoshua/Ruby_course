<div>
    <h1>Articles</h1>
    <%= notice %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3"> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td> <%= article.name %></td>
                    <td> <%= article.description %></td>
                    <td> <%= link_to "show", article_path(article), class: :btn%> </td>
                    <td> <%= link_to "edit", edit_article_path(article), class: :btn %> </td>
                    <td> <%= link_to "delete", article_path(article), class: "btn-del" ,data: {turbo_method: :delete} %> </td> 
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
